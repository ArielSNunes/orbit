{
  "compilerOptions": {
    "target": "es5",
    "module": "amd",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "inlineSources": true,
    "inlineSourceMap": true,
    "declaration": false,
    "newLine": "LF",
    "outFile": "tests/tests.js",
    "types": ["qunit"],
    "allowJs": true
  },
  "include": [
    "src/**/*.js",
    "src/**/*.ts",
    "test/**/*.js",
    "test/**/*.ts",
    "node_modules/@types/**/*.ts"
  ]
}
